<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/v_information_content"
        style="@style/common_blue_text_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/unit_2"
        android:layout_marginEnd="@dimen/unit_4"
        android:layout_marginBottom="@dimen/unit_2"
        android:text="@string/dummy_temperature" />

    <TextView
        android:id="@+id/v_information_title"
        style="@style/common_text_14"
        app:layout_constraintBottom_toBottomOf="@id/v_information_content"
        app:layout_constraintEnd_toStartOf="@id/v_information_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/unit_4"
        android:text="@string/temperature" />
</androidx.constraintlayout.widget.ConstraintLayout>