<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="heading">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="common_white_text_16">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="common_text_20">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="common_text_18" parent="common_text_20">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="common_text_16" parent="common_text_20">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="common_text_14" parent="common_text_20">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="common_text_12" parent="common_text_20">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="common_blue_text_30">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorBlue</item>
    </style>

    <style name="common_blue_text_18" parent="common_blue_text_30">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="common_blue_text_14" parent="common_blue_text_30">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="common_blue_text_10" parent="common_blue_text_30">
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="city_name_on_map_style">
        <item name="android:textColor">#171D33</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">24sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="country_name_on_map_style">
        <item name="android:textColor">#171D33</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">24sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

